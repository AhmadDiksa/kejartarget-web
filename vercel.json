{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel/php"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/build/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      },
      "dest": "/build/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    {
      "src": "/(.*\\.(ico|txt))",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.php"
    }
  ],
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false",
    "APP_URL": "@app_url"
  },
  "build": {
    "env": {
      "VITE_APP_URL": "@app_url"
    }
  },
  "functions": {
    "api/index.php": {
      "runtime": "@vercel/php@0.6.0",
      "includeFiles": "public/**"
    }
  }
}
